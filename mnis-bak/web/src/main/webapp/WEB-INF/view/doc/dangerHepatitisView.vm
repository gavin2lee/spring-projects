    	type: 'GET',
    	data: {cureNo:'$!{patient.cureNo}'},
    	success: function(data, status) {
    		if (data) {
    			$.each(data, function(index, obj) {
    				var name = this['key'];
    				var value = this['value'];
    				if (value) {
    					var $e = $('span[name=' + name + ']');
    					$e.text(value);
    				}
    			});
    		}
    	},
    	error: function(xhr, status, err) {
    		$.messager.alert('数据', '获取数据失败', 'error');
//     		initComponent();
    	}
    });
});
